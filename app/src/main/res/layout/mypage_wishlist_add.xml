<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/title_wish_add"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:background="#FFFFFF"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Add WishList"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000" />

    <LinearLayout
        android:id="@+id/image_adding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="10dp"
        android:paddingLeft="20dp"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/image_add"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/image_add"
            android:scaleType="centerCrop"
            android:layout_margin="30dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="제목"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"/>

            <EditText
                android:id="@+id/wishlist_edit_title"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="메모"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:id="@+id/wishlist_edit_memo"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textSize="20dp" />

        </LinearLayout>


            <LinearLayout
                android:layout_marginTop="180dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/wish_add_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#D5D3D3"
                    android:text="확인"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:layout_marginLeft="80dp"
                    android:onClick="click_button_save"/>

                <Button
                    android:id="@+id/wish_add_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#D5D3D3"
                    android:text="취소"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:layout_marginLeft="90dp"
                    android:onClick="click_button_cancel"/>

            </LinearLayout>



    </LinearLayout>

</LinearLayout>